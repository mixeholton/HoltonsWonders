@using MixeWonders.Values.Enums
@using MixeWonders.Values.Services
<MudNavMenu>
    @foreach(var Navs in CurrentUser.CurrentUser.Permissions.Where(x => x != PermissionType.None))
    {
    <MudNavLink Href="@GetHref(Navs)" Match="NavLinkMatch.Prefix">@Navs.ToString()</MudNavLink>
        
    }
</MudNavMenu>

@code{
    [Inject] public CurrentUserService CurrentUser { get; set; }
    public string GetHref(PermissionType permissionType) => $"/{permissionType}"; 
}
